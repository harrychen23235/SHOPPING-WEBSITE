<div class="well">
<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-8">
<u><h4><%= link_to  product.name, product_path(product.id) %></small>  </h4></u>
      
 <br>
     <%= image_tag product.image.url ,class: "img-responsive"  %>
    </div>

    <div class="col-xs-6 col-md-3">

      <%= form_for order_item, remote: true do |f| %>
      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
            			<%=link_to "Comment",product_comments_path(product),class: "btn btn-primary" %>
            <% if current_user.name=="upadmin" && !current_user?(@user)  %>
			</br>
            <%= link_to "Delete", product, { data: { confirm: "Are you sure you wish to delete the product '#{product.name}' from your listing? ;        
" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            <%= link_to "Edit", edit_product_path(product), class: "btn btn-danger" %>


            <% end %>
			
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
